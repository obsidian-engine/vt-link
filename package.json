{
  "name": "vt-link",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm gen && pnpm -r build",
    "gen:openapi": "pnpm -C packages/schema-zod gen:openapi",
    "gen:types": "pnpm -C packages/api-client gen",
    "gen": "pnpm gen:openapi && pnpm gen:types",
    "mock": "npx @stoplight/prism-cli mock packages/schema-zod/openapi.yaml --port 4010",
    "spectral": "npx @stoplight/spectral-cli lint packages/schema-zod/openapi.yaml",
    "check-types-diff": "pnpm gen && git diff --exit-code -- packages/api-client/src/__generated__/types.ts",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}