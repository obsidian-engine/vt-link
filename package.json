{
  "name": "vt-line-manager",
  "version": "0.1.0",
  "description": "VTube用LINE公式アカウント管理ツール",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "types:generate": "node scripts/generate-types.js",
    "types:watch": "chokidar 'supabase/**/*.sql' -c 'npm run types:generate'",
    "db:types": "npm run types:generate",
    "prebuild": "npm run types:generate",
    "biome:check": "npx @biomejs/biome check .",
    "biome:fix": "npx @biomejs/biome check --write .",
    "biome:format": "npx @biomejs/biome format --write .",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@supabase/supabase-js": "^2.57.0",
    "@tailwindcss/postcss": "^4.1.12",
    "clsx": "^2.1.1",
    "next": "^15.5.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^2.5.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.12.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.1.8",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "supabase": "^2.40.1",
    "tailwindcss": "^4.1.12",
    "ts-jest": "^29.4.1",
    "typescript": "5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
