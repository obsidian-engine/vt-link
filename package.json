{
  "name": "vt-line-manager",
  "version": "0.1.0",
  "description": "VTube用LINE公式アカウント管理ツール",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "types:generate": "node scripts/generate-types.js",
    "types:watch": "chokidar 'supabase/**/*.sql' -c 'npm run types:generate'",
    "db:types": "npm run types:generate",
    "prebuild": "npm run types:generate",
    "test:schemas": "vitest run **/*.schema.test.ts",
    "test:brand-types": "vitest run __tests__/type-safety/brand-types.test.ts",
    "test:id-factory": "vitest run __tests__/type-safety/id-factory.test.ts",
    "test:server-actions": "vitest run __tests__/type-safety/server-actions.test.ts",
    "test:api-contracts": "vitest run __tests__/type-safety/api-contracts.test.ts",
    "test:type-safety": "node scripts/test-type-safety.js",
    "check:schema-drift": "npm run types:generate && git diff --exit-code src/generated/",
    "check:type-coverage": "typescript-coverage-report",
    "analyze:bundle": "next build --analyze",
    "security:type-check": "npm audit && npm run lint -- --quiet"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@supabase/supabase-js": "^2.49.0",
    "clsx": "^2.1.1",
    "next": "^15.5.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^2.5.5",
    "typescript": "5.7.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.1.8",
    "jest": "^29.7.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "supabase": "^2.40.1",
    "supazod": "^2.0.0",
    "tailwindcss": "^4.1.12",
    "type-fest": "^4.30.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
